   "source": [
    "import time\n",
    "\n",
    "def countdown (t):\n",
    "    while t:\n",
    "        mins, secs = divmod(t, 60)\n",
    "        timer = '{:02d}:{:02d}'.format(mins, secs)\n",
    "        print(timer, end=\"\\r\")\n",
    "        time.sleep(1)\n",
    "        t -=1\n",
    "    print(\"Fire in the hole\")\n",
    "t=t = input(\"Enter the time : \")\n",
    "countdown(int(t))"
   ]
